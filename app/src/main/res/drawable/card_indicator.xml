<?xml version="1.0" encoding="utf-8"?>
<level-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:maxLevel="0"
        android:minLevel="0">
        <inset android:insetLeft="1dp" android:insetRight="1dp" android:insetTop="1dp" android:insetBottom="1dp">
            <shape android:shape="rectangle">
                <size
                    android:width="10dp"
                    android:height="15dp" />
                <stroke
                    android:width="1dp"
                    android:color="#000" />
                <solid android:color="#fff" />
            </shape>
        </inset>
    </item>
    <item
        android:maxLevel="1"
        android:minLevel="1">
        <inset android:insetLeft="1dp" android:insetRight="1dp" android:insetTop="1dp" android:insetBottom="1dp">
            <shape android:shape="rectangle">
                <size
                    android:width="10dp"
                    android:height="15dp" />
                <stroke
                    android:width="1dp"
                    android:color="#000" />
                <solid android:color="#ff0" />
            </shape>
        </inset>
    </item>
    <item
        android:maxLevel="2"
        android:minLevel="2">
        <inset android:insetLeft="1dp" android:insetRight="1dp" android:insetTop="1dp" android:insetBottom="1dp">
            <shape android:shape="rectangle">
                <size
                    android:width="10dp"
                    android:height="15dp" />
                <stroke
                    android:width="1dp"
                    android:color="#000" />
                <solid android:color="#f00" />
            </shape>
        </inset>
    </item>

</level-list>